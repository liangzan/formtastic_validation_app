<%- semantic_form_for @user, :url => users_path, :html => {:method => :post} do |f| %>
  <%- f.inputs :name => "User" do %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :mobile %>
    <%= f.input :address %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :gender %>
    <%= f.input :age %>
    <%= f.input :website %>
    <%= f.input :company %>
    <%= f.input :title %>
    <%= f.input :terms_of_service, :as => :boolean %>
  <%- end %>

  <%- f.buttons do %>
    <%= submit_tag "add" %>
  <%- end %>
<%- end %>
